#!/usr/bin/env bash

source bin/params

docker-compose run --rm php-7.2 vendor/bin/phpunit --configuration=.phpunit.xml --testdox --coverage-text
docker-compose run --rm php-7.3 vendor/bin/phpunit --configuration=.phpunit.xml --testdox --coverage-text
docker-compose run --rm php-7.4 vendor/bin/phpunit --configuration=.phpunit.xml --testdox --coverage-text
